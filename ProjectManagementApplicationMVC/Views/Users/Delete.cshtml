@model  ProjectManagementApplicationMVC.Models.ViewModels.UserVM


<form asp-action="DeletePost" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h4 class="text-black-50 pl-3">Delete user</h4>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label asp-for="Name"></label>
                        </div>
                     
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <input asp-for="Name" disabled class="form-control" />

                        </div>
                   

                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">

                                <input type="submit" class="btn btn-danger w-75" value="Delete" />

                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success">Back to users list</a>
                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>

</form>