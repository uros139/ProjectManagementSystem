@model IEnumerable<ProjectManagementApplicationMVC.Models.ViewModels.UserVM>

@if (User.IsInRole(ProjectManagementApplicationMVC.Helper.Helper.Admin))
{
    <div class="container p-3">
        <div class="col">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="text text-black-50>List of projects</a>
                    <li />
                    <li class="nav-item">
                        <a class="btn btn-primary" asp-action="Index" asp-controller="Users">All users</a>
                    </li>
                </ul>
            </div>
        </div>

        <br />

        @if (Model.Count() > 0)
        {


            <table class="table table-bordered table-striped" style=" width: 100%">
                <thead>
                    <tr>

                        <th>
                            Name
                        </th>
                        <th>
                            Role
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td width="30%">@item.Name</td>
                        <td width="30%">@item.Role</td>


                        @if (User.IsInRole(ProjectManagementApplicationMVC.Helper.Helper.Admin))
                        {
                            <td width="40%">
                                <div class="col-6 text-right role="group">
                                    <a asp-controller="Users" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger"> Delete</a>


                                </div>
                            </td>
                        }
                    </tr>
                    }

                </tbody>
            </table>
        }

    </div>
}